<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DMS STRATEGY V3.0 - ALL-IN-ONE</title>
    
    <script src="https://www.gstatic.com/firebasejs/9.17.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.17.1/firebase-database-compat.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            /* Transizione fluida */
            --transition-speed: 0.4s;
            
            --bg: #0b0e14; --card: #151921; --text: #e9ecef;
            --accent: #1d8cf8; --success: #00f2c3; --warning: #ff4757;
            --input-border: #2b3548;
        }

        body.light-theme {
            --bg: #f4f7f6; --card: #ffffff; --text: #2d3436;
            --input-border: #dfe6e9;
        }

        body { 
            font-family: 'Segoe UI', sans-serif; 
            background-color: var(--bg); 
            color: var(--text); 
            margin: 0; 
            transition: background-color var(--transition-speed), color var(--transition-speed);
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }

        /* Layout Principale */
        .dashboard {
            display: grid;
            grid-template-columns: 400px 1fr 350px; /* Telemetria | Corsie | Database */
            gap: 10px;
            padding: 10px;
            flex: 1;
            overflow: hidden;
        }

        .panel { 
            background: var(--card); 
            border-radius: 8px; 
            border: 1px solid var(--input-border); 
            display: flex; 
            flex-direction: column; 
            overflow: hidden;
            transition: background-color var(--transition-speed), border-color var(--transition-speed);
        }

        .panel-header {
            padding: 10px;
            background: rgba(0,0,0,0.2);
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Gestione N-Corsie */
        #lanes-container {
            display: flex;
            gap: 10px;
            overflow-x: auto;
            padding: 10px;
            flex: 1;
        }

        .lane {
            min-width: 250px;
            background: rgba(0,0,0,0.1);
            border-radius: 6px;
            display: flex;
            flex-direction: column;
            border-top: 5px solid var(--accent);
        }

        /* Notifiche Telemetria Integrate */
        #pit-bridge-alert {
            background: var(--accent);
            color: white;
            padding: 15px;
            margin: 10px;
            border-radius: 8px;
            display: none; /* Appare quando Apex rileva ingresso */
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }

        /* Table Style */
        table { width: 100%; border-collapse: collapse; font-size: 0.8em; }
        th { background: rgba(0,0,0,0.2); padding: 8px; text-align: left; }
        td { padding: 6px 8px; border-bottom: 1px solid var(--input-border); }

        .kart-item {
            background: var(--card);
            margin: 5px;
            padding: 10px;
            border-radius: 4px;
            cursor: grab;
            border: 1px solid var(--input-border);
            display: flex;
            justify-content: space-between;
        }

        .scroll-v { overflow-y: auto; flex: 1; }

        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: opacity 0.2s;
        }
        .btn:hover { opacity: 0.8; }
        .btn-success { background: var(--success); color: black; }
        .btn-accent { background: var(--accent); color: white; }
    </style>
</head>
<body>

<div style="padding: 10px 20px; background: var(--card); border-bottom: 1px solid var(--input-border); display: flex; justify-content: space-between; align-items: center;">
    <div style="display:flex; gap:20px; align-items: center;">
        <h2 style="margin:0;">DMS V3.0</h2>
        <input type="text" id="apexUrl" placeholder="URL Feed Apex..." style="width: 250px; padding: 5px;">
        <button class="btn btn-success" onclick="startLiveTracking()">CONNETTI APEX</button>
    </div>
    
    <div id="setup-controls">
        <button class="btn btn-accent" onclick="addNewLane()">+ AGGIUNGI CORSIA</button>
        <button class="btn" onclick="toggleTheme()" id="themeBtn">‚òÄÔ∏è</button>
    </div>
</div>

<div class="dashboard">
    
    <div class="panel">
        <div class="panel-header">LIVE TELEMETRY</div>
        <div class="scroll-v">
            <table id="telemetryTable">
                <thead>
                    <tr>
                        <th>POS</th>
                        <th>TEAM</th>
                        <th>GAP VIRT.</th>
                        <th>PIT</th>
                    </tr>
                </thead>
                <tbody id="telemetryBody"></tbody>
            </table>
        </div>
        <div style="height: 200px; border-top: 1px solid var(--input-border);">
            <canvas id="miniChart"></canvas>
        </div>
    </div>

    <div class="panel">
        <div class="panel-header">
            GESTIONE CAMBI KART
            <div id="activeTeamStatus" style="font-size: 0.8em; color: var(--success);"></div>
        </div>
        
        <div id="pit-bridge-alert">
            <div style="font-weight: bold; margin-bottom: 5px;">‚ö†Ô∏è RILEVATO INGRESSO: <span id="alert-team-name">--</span></div>
            <div style="display:flex; gap:10px;">
                <button class="btn btn-success" id="btn-auto-pit">REGISTRA PIT (STOP)</button>
                <button class="btn btn-accent" id="btn-auto-change">CAMBIO KART</button>
                <button class="btn" style="background:gray;" onclick="hideBridge()">IGNORA</button>
            </div>
        </div>

        <div id="lanes-container">
            </div>
    </div>

    <div class="panel">
        <div class="panel-header">DATABASE TEAM</div>
        <div class="scroll-v">
            <table style="font-size: 0.7em;">
                <tbody id="dbTeamsBody"></tbody>
            </table>
        </div>
        <div class="panel-header" style="border-top:1px solid var(--input-border)">LOG AZIONI</div>
        <div id="actionLog" class="scroll-v" style="font-size: 0.75em; padding: 10px; color: #888;"></div>
    </div>

</div>

<script>
    // Configurazione Firebase (usa la tua attuale)
    const firebaseConfig = { apiKey: "...", databaseURL: "..." };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    let state = {
        lanes: [ {id: 'lane1', name: 'CORSIA 1', karts: []} ],
        teams: [],
        log: []
    };

    let lastApexData = [];

    // --- LOGICA CORSIA DINAMICA ---
    function addNewLane() {
        const newId = 'lane' + (state.lanes.length + 1);
        state.lanes.push({ id: newId, name: 'CORSIA ' + state.lanes.length, karts: [] });
        save();
        renderLanes();
    }

    function renderLanes() {
        const container = document.getElementById('lanes-container');
        container.innerHTML = state.lanes.map(lane => `
            <div class="lane" id="${lane.id}">
                <div style="padding:10px; font-size:0.8em; font-weight:bold; border-bottom:1px solid rgba(255,255,255,0.1)">
                    ${lane.name}
                </div>
                <div class="kart-list" style="flex:1;" data-lane-id="${lane.id}">
                    ${lane.karts.map(k => `
                        <div class="kart-item" data-num="${k.num}">
                            #${k.num} <small>${k.rating}</small>
                        </div>
                    `).join('')}
                </div>
                <div style="padding:5px; display:flex; gap:2px;">
                    <input type="text" id="in-${lane.id}" placeholder="#" style="width:40px;">
                    <button class="btn btn-success" style="padding:2px 8px;" onclick="addKartDirect('${lane.id}')">+</button>
                </div>
            </div>
        `).forEach((html, index) => {
            // Render manuale per non rompere Sortable
        });
        
        // Versione semplificata per brevit√†:
        container.innerHTML = state.lanes.map(lane => renderLaneHtml(lane)).join('');
        initSortables();
    }

    function renderLaneHtml(lane) {
        return `
            <div class="lane">
                <div style="padding:10px; font-weight:bold;">${lane.name}</div>
                <div class="kart-list" id="list-${lane.id}" style="min-height:100px;">
                    ${(lane.karts || []).map(k => `<div class="kart-item" data-num="${k.num}">#${k.num}</div>`).join('')}
                </div>
            </div>
        `;
    }

    // --- INTEGRAZIONE APEX (BRIDGE) ---
    async function startLiveTracking() {
        const url = document.getElementById('apexUrl').value;
        // ... (Logica fetch gi√† vista nella V2) ...
        // Simulazione rilevamento ingresso:
        checkPitEntry(mockData);
    }

    function checkPitEntry(data) {
        // Se un team √® "In Pit" (tempo sul giro vuoto o flag specifico di Apex)
        const teamInPit = data.find(t => t.isPitting === true);
        
        if(teamInPit) {
            const bridge = document.getElementById('pit-bridge-alert');
            document.getElementById('alert-team-name').innerText = teamInPit.name;
            bridge.style.display = 'block';

            // Collega i bottoni
            document.getElementById('btn-auto-pit').onclick = () => {
                registerPit(teamInPit.num, false);
                hideBridge();
            };
            document.getElementById('btn-auto-change').onclick = () => {
                registerPit(teamInPit.num, true);
                hideBridge();
            };
        }
    }

    function hideBridge() {
        document.getElementById('pit-bridge-alert').style.display = 'none';
    }

    function registerPit(teamNum, isChange) {
        // 1. Trova il team nel database
        // 2. Incrementa Pit Count
        // 3. Se isChange, prendi il primo kart da lane1 e mettilo al team
        console.log(`Registrato PIT per ${teamNum}. Cambio: ${isChange}`);
        // Logica di aggiornamento Firebase qui...
    }

    // --- UX: THEME TRANSITION ---
    function toggleTheme() {
        const body = document.body;
        const isDark = body.classList.contains('dark-theme');
        body.style.transition = "background-color 0.4s ease, color 0.4s ease";
        
        if (isDark) {
            body.classList.replace('dark-theme', 'light-theme');
            document.getElementById('themeBtn').innerText = "üåô";
        } else {
            body.classList.add('dark-theme');
            body.classList.remove('light-theme');
            document.getElementById('themeBtn').innerText = "‚òÄÔ∏è";
        }
    }

    // Inizializzazione
    window.onload = () => {
        renderLanes();
        // Carica dati Firebase...
    };

    function initSortables() {
        // Rendi ogni lista di ogni corsia trascinabile verso le altre
        state.lanes.forEach(lane => {
            new Sortable(document.getElementById('list-' + lane.id), {
                group: 'lanes',
                animation: 150
            });
        });
    }
</script>

</body>
</html>
